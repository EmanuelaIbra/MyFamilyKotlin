<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:elevation="16dp"
        android:src="@drawable/ic_baseline"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/card"
        app:layout_constraintStart_toStartOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card"
        />
    <TextView
        android:id="@+id/member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Ela"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="@id/card"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/img_location1"
        android:src="@drawable/ic_location"
        app:layout_constraintTop_toBottomOf="@id/member_name"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:elevation="16dp"
        app:tint="@color/green"
        />
    <TextView
        android:id="@+id/member_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="9th building,2nd floor,x road"
        android:textColor="@color/dark_grey1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_location1"
        android:elevation="16dp"
        app:layout_constraintTop_toBottomOf="@id/member_name"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/img_battery"
        android:src="@drawable/ic_bbattery"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintStart_toStartOf="@id/img_user"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:elevation="16dp"
        app:tint="@color/green"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_battery"
        android:layout_marginStart="4dp"
        android:elevation="16dp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey1"
        app:layout_constraintBottom_toBottomOf="@id/img_battery"
        app:layout_constraintStart_toEndOf="@id/img_battery"
        app:layout_constraintTop_toTopOf="@id/img_battery"
        android:text="90%"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/img_distance"
        android:src="@drawable/ic_distance"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintStart_toEndOf="@id/text_battery"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:elevation="16dp"
        app:tint="@color/green"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_distance"
        android:layout_marginStart="4dp"
        android:elevation="16dp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey1"
        app:layout_constraintBottom_toBottomOf="@id/img_battery"
        app:layout_constraintStart_toEndOf="@id/img_distance"
        app:layout_constraintTop_toTopOf="@id/img_battery"
        android:text="223M"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/img_wifi"
        android:src="@drawable/ic_baseline_wifi_24"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintStart_toEndOf="@id/text_distance"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:elevation="16dp"
        app:tint="@color/green"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_wifi"
        android:layout_marginStart="4dp"
        android:elevation="16dp"
        android:textStyle="bold"
        android:textColor="@color/dark_grey1"
        app:layout_constraintBottom_toBottomOf="@id/img_battery"
        app:layout_constraintStart_toEndOf="@id/img_wifi"
        app:layout_constraintTop_toTopOf="@id/img_battery"
        android:text="WiFi"
        />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/img_phone"
        android:src="@drawable/ic_phone"
        app:layout_constraintTop_toBottomOf="@id/img_user"
        app:layout_constraintEnd_toEndOf="@id/card"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="16dp"
        app:tint="@color/black"/>


</androidx.constraintlayout.widget.ConstraintLayout>